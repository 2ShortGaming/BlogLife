@using Microsoft.AspNet.Identity
@model BlogLife.Models.ApplicationUser
@using BlogLife.Helpers
@{ 
    var userHelper = new UserHelper();
}
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul>
        <li class="nav navbar-nav navbar-right">
            @Html.ActionLink(userHelper.GetDisplayName(User.Identity.GetUserId()), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li class="nav navbar-nav navbar-right"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul>
        <li class="nav navbar-nav navbar-right">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li class="nav navbar-nav navbar-right">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
